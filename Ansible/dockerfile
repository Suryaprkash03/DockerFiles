# Use official Python slim image
FROM python:3.10-slim

# Metadata
LABEL maintainer="suryatheking5784@gmail.com"
LABEL version="1.0"

# Set environment variable to avoid interactive prompts
ENV DEBIAN_FRONTEND=noninteractive

# Install system dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        curl \
        sshpass \
        git \
        openssh-client \
        ca-certificates \
        vim \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Install Ansible dependencies
# Install Ansible using pip (no need to install python3-pip separately, it's already available in python image)
RUN pip install --no-cache-dir ansible

# Install specific community.general collection version
RUN ansible-galaxy collection install community.general
# Declare a volume for sharing playbooks or scripts

# This volume can be mounted to share files between the host and the container
# or to persist data generated by the container
VOLUME ["/ansible"]

# Set working directory
WORKDIR /ansible

# Copy all files from current dir into the container's /app
COPY . /ansible

# Default command: open a bash shell
CMD ["/bin/bash"]
